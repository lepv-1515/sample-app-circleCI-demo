<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render "shared/user_info" %>
      </section>
      <section class="micropost_form">
        <%= render "shared/micropost_form" %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3><%= t ".micropost_feed" %></h3>
      <%= render "shared/feed" %>
    </div>

  </div>
<% else %>
  <div class="center jumbotron">
    <h1><%= t ".wellcome" %></h1>
    <h2>
      <%= t ".text_1" %>
      <%= link_to raw(t ".body_link_book"), t(".link_book") %>
      <%= t ".text_2" %>
    </h2>
    <%= link_to t(".body_link_signup"), signup_path, class: "btn btn-lg  btn-primary" %>
  </div>
  <%=link_to image_tag("rails.png", alt: t(".alt_image")), "http://rubyonrails.org/" %>
<% end %>
